{
  "name": "code-assistant",
  "displayName": "Code Buddy",
  "publisher": "SutherlandDev",
  "description": "Your Sutherland assistant",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.88.0",
    "node": ">=12.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "module": "./main.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeBuddy",
          "title": "Code Buddy",
          "icon": "my-icon.svg"
        }
      ]
    },
    "views": {
      "codeBuddy": [
        {
          "id": "landingPage",
          "name": "Landing Page",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "code-assistant.codeBuddy",
        "title": "Code Buddy"
      },
      {
        "command": "code-assistant.triggerCompletion",
        "title": "Trigger Completion"
      },
      {
        "command": "code-assistant.debugWithCodeBuddy",
        "title": "Debug"
      },
      {
        "command": "code-assistant.explainWithCodeBuddy",
        "title": "Explain"
      },
      {
        "command": "code-assistant.testWithCodeBuddy",
        "title": "Generate test cases"
      }
    ],
    "submenus": [
      {
        "id": "buddy.submenu",
        "label": "Code Buddy"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "buddy.submenu",
          "group": "navigation"
        }
      ],
      "buddy.submenu": [
        {
          "command": "code-assistant.debugWithCodeBuddy",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "code-assistant.explainWithCodeBuddy",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "code-assistant.testWithCodeBuddy",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-assistant.triggerCompletion",
        "key": "ctrl+shift+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@langchain/community": "^0.0.54",
    "@langchain/openai": "^0.1.3",
    "chromadb": "^1.8.1",
    "chromadb-default-embed": "^2.13.2",
    "langchain": "^0.2.5",
    "lodash.debounce": "^4.0.8",
    "ollama": "^0.5.2",
    "ollama-node": "^0.1.28",
    "openai": "^4.47.3",
    "pdf-parse": "^1.1.1",
    "pg": "^8.12.0"
  },
  "directories": {
    "test": "test"
  },
  "author": "",
  "license": "ISC"
}
